---
title: Students and Postdocs
permalink: /students/
layout: layouts/page.njk
locale: en
---

<h2>Current PhD Students</h2>

<div class="students-grid">
{% for student in students.current_phd %}
  <div class="student-card">
    <img src="/assets/img/{{ student.photo }}" alt="{{ student.name }}">
    <h3>
      {% if student.url %}<a href="{{ student.url }}" target="_blank" rel="noopener">{{ student.name }}</a>
      {% else %}{{ student.name }}{% endif %}
    </h3>
    <p class="role">{{ student.status }}</p>
    {% if student.coadvised_with %}
      <p class="description">
        Co-advised with <a href="{{ student.coadvised_with.url }}" target="_blank" rel="noopener">{{ student.coadvised_with.name }}</a>
      </p>
    {% endif %}
  </div>
{% endfor %}
</div>

<h2>Graduate Students</h2>

<div class="students-grid">
{% for student in students.graduate_students %}
  <div class="student-card">
    <img src="/assets/img/{{ student.photo }}" alt="{{ student.name }}">
    <h3>
      {% if student.url %}<a href="{{ student.url }}" target="_blank" rel="noopener">{{ student.name }}</a>
      {% else %}{{ student.name }}{% endif %}
    </h3>
    <p class="role">{{ student.status }}</p>
    {% if student.thesis %}
      <p><a href="{{ student.thesis }}" target="_blank" rel="noopener">Thesis</a></p>
    {% endif %}
    {% if student.coadvised_with %}
      <p class="description">
        {% if student.coadvised_with.length %}
          Co-advised with
          {% for advisor in student.coadvised_with %}
            {% if advisor.url %}<a href="{{ advisor.url }}" target="_blank" rel="noopener">{{ advisor.name }}</a>
            {% else %}{{ advisor.name }}{% endif %}{% if not loop.last %} and {% endif %}
          {% endfor %}
        {% else %}
          Co-advised with <a href="{{ student.coadvised_with.url }}" target="_blank" rel="noopener">{{ student.coadvised_with.name }}</a>
        {% endif %}
      </p>
    {% endif %}
  </div>
{% endfor %}
</div>

