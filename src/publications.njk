title: Publications
permalink: /publications/
layout: layouts/page.njk
locale: en
---

<p class="text-large">
  <a href="https://scholar.google.fr/citations?user=RY1F4S8AAAAJ&hl=en" target="_blank" rel="noopener">Publications listed on Google Scholar</a>
</p>

<h2>Journal Articles</h2>

<ol class="publications-list" reversed>
{% for pub in publications.journal_articles | reverse %}
  <li>
    {% for author in pub.authors %}
      <span class="author">{{ author }}</span>{% if not loop.last %}, {% endif %}
    {% endfor %}
    <span class="title">{{ pub.title }}</span>,
    <span class="venue">{{ pub.venue }}</span>{% if pub.volume %}, {{ pub.volume }}{% endif %}({{ pub.year }}){% if pub.pages %}, pp. {{ pub.pages }}{% endif %}.
    {% if pub.links %}
      {% if pub.links.paper %}<a href="{{ pub.links.paper }}" target="_blank" rel="noopener">[Paper]</a>{% endif %}
      {% if pub.links.preprint %}<a href="{{ pub.links.preprint }}" target="_blank" rel="noopener">[Preprint]</a>{% endif %}
      {% if pub.links.code %}<a href="{{ pub.links.code }}" target="_blank" rel="noopener">[Code]</a>{% endif %}
    {% endif %}
  </li>
{% endfor %}
</ol>

<h2>Proceedings</h2>

<ol class="publications-list" reversed>
{% for pub in publications.proceedings | reverse %}
  <li>
    {% for author in pub.authors %}
      <span class="author">{{ author }}</span>{% if not loop.last %}, {% endif %}
    {% endfor %}
    <span class="title">{{ pub.title }}</span>,
    <span class="venue">{{ pub.venue }}</span>, {{ pub.year }}{% if pub.pages %}, pp. {{ pub.pages }}{% endif %}.
    {% if pub.links and pub.links.preprint %}<a href="{{ pub.links.preprint }}" target="_blank" rel="noopener">[Preprint]</a>{% endif %}
  </li>
{% endfor %}
</ol>

<h2>Ph.D. Thesis</h2>

<p>
  <strong>{{ publications.thesis.title }}</strong> ({{ publications.thesis.year }})
  <br>
  <a href="{{ publications.thesis.links.pdf }}">[PDF]</a>
  <a href="{{ publications.thesis.links.defense }}">[Defense Slides]</a>
</p>

<h2>Code Repositories</h2>

<ol class="publications-list">
{% for code in publications.codes %}
  <li>
    <a href="{{ code.url }}" target="_blank" rel="noopener"><strong>{{ code.title }}</strong></a> ({{ code.language }})
    {% if code.doi %}
    <br>
    <img src="https://zenodo.org/badge/DOI/{{ code.doi }}.svg" alt="DOI: {{ code.doi }}">
    {% endif %}
  </li>
{% endfor %}
</ol>

<h2>Selected Talks</h2>

<ol class="publications-list" reversed>
{% for talk in publications.selected_talks | reverse %}
  <li>
    <strong>{{ talk.title }}</strong>, {{ talk.venue }}, {{ talk.year }}.
    {% if talk.url %}<a href="{{ talk.url }}" target="_blank" rel="noopener">[Conference Site]</a>{% endif %}
    {% if talk.video %}<a href="{{ talk.video }}" target="_blank" rel="noopener">[Video]</a>{% endif %}
  </li>
{% endfor %}
</ol>

